{
  "task": "tsms"     //  root/task/images-models-options
  , "model": "stage" // "plain" | "plain2" if two inputs
  , "gpu_ids": [6]  //[4,5,6,7]

  , "scale": 4       // broadcast to "netG" if SISR
  , "n_channels": 3  // broadcast to "datasets", 1 for grayscale, 3 for color
  , "sigma": 0       // 15, 25, 50 for DnCNN | [0, 75] for FDnCNN and FFDNet
  , "sigma_test": 0  // 15, 25, 50 for DnCNN, FDnCNN and FFDNet, 0 for SR

  , "merge_bn": false              // if no BN exists, set false
  , "merge_bn_startpoint": 400000  // merge BN after N iterations

  , "path": {
    "root": "tsms_dbsr"      // "denoising" | "superresolution"
    , "pretrained_netG0": null      // path of pretrained model
    , "pretrained_netG1": null
    , "pretrained_netG2":"tsms_dbsr/tsms/models/6_G2.pth" 
  }

  , "datasets": {
     "val": {
      "name": "val_dataset"            // just name
      , "dataset_type": "val"           
      , "dataroot_H": "datasets/val_reds_sharp.lmdb"   // path of H testing dataset
      , "dataroot_L": "datasets/val_reds_blur.lmdb"              // path of L testing dataset
    }
  }

  , "netG": {
    "net_type0": "deblur"    
    , "net_type1": "sr"    
    , "net_type2": "tsms"
    , "in_nc": 3        // input channel number
    , "out_nc": 3       // ouput channel number
    , "n_feats_1": 64
    , "n_blocks_1": 12
    , "kernel_size_1":5 
    , "n_scales_1": 3
    , "dn_feats_2": 128
    , "dd_feats_2": 96
    , "dn_blocks_2": 12
    , "n_feats_2": 128
    , "n_blocks_2": 12
    , "kernel_size_2": 3
    , "init_type": "orthogonal"
    , "init_bn_type": "uniform"
    , "init_gain": 0.2
  }

  , "train": {
    "G_lossfn_type": "l1"                
    , "G_lossfn_weight": 1.0           

    , "G_optimizer_type": "adam"       
    , "G_optimizer_lr": 1e-4         
    , "G_optimizer_clipgrad": null  

    , "G_scheduler_type": "MultiStepLR" 
    , "G_scheduler_milestones": [200000, 400000, 600000, 800000, 1000000, 2000000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null   
    , "G_regularizer_clipstep": null  

    , "checkpoint_test": 400    
    , "checkpoint_save": 800   
    , "checkpoint_print": 200
  }
}
